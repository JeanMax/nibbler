##
## CUSTOM CONFIG
##

# name of the lib to make
NAME =		libdlallegro.so

# file-names of the sources
SRCS =		DlAllegro.class.cpp

# folder-names of the sources (':' separated list)
VPATH =		src

# where are your tests?
TEST_DIR =	test

# allegro
ALLEGRO_DIR =	allegro-5.2.2.0
ALLEGRO_INSTALL_DIR = $(shell pwd)/$(ALLEGRO_DIR)/install
ALLEGRO_ARCHIVE = allegro-5.2.2.tar.gz
ALLEGRO_URL =	 https://github.com/liballeg/allegro5/releases/download/5.2.2.0/$(ALLEGRO_ARCHIVE)
ALLEGRO_I_DIR =	-I$(ALLEGRO_INSTALL_DIR)/include/allegro5
ALLEGRO_LIB =	-rpath $(ALLEGRO_INSTALL_DIR)/lib -L$(ALLEGRO_INSTALL_DIR)/lib -lallegro -lallegro_main
ALLEGRO =		$(ALLEGRO_INSTALL_DIR)/lib/liballegro.so

# folder-names containing headers files (prefix them with "-I")
I_DIR =		-Iinc -I../core/inc -I../core/inc/game $(ALLEGRO_I_DIR)

# extra libraries needed for linking
LIBS =		$(ALLEGRO_LIB)



##
## GLOBAL VARIABLES
##

# folder used to store all compilations sub-products (.o and .d mostly)
O_DIR =		obj
OBJS =		$(SRCS:%.cpp=$(O_DIR)/%.o)
DEPS =		$(OBJS:%.o=%.d)

# specify flags for commands used in the following rules
RM =		rm -f
RMDIR =		rmdir -p
MKDIR =		mkdir -p
CURL =		curl -LO
UNTAR =		tar -xvf
MAKE =		make
MAKEFLAGS =	-j
CXX =		$(shell clang --version &>/dev/null && echo clang++ || echo g++) -std=c++11
LD =		$(CXX)
CPPFLAGS =	-fPIC
CXXFLAGS =	-Wall -Wextra -Werror -O2
LDFLAGS =	-shared
LDLIBS =	$(LIBS)

# guess os and architecture
ifeq ($(OS), Windows_NT)
  CPPFLAGS += -D WIN32
  ifeq ($(PROCESSOR_ARCHITECTURE), AMD64)
    CPPFLAGS += -D AMD64
  else ifeq ($(PROCESSOR_ARCHITECTURE), x86)
    CPPFLAGS += -D IA32
  endif
else
  UNAME_S = $(shell uname -s)
  ifeq ($(UNAME_S), Linux)
    ECHO = echo -e
    CPPFLAGS += -D LINUX
  else ifeq ($(UNAME_S), Darwin)
    ECHO = echo
    CPPFLAGS += -D OSX
  endif
  UNAME_P = $(shell uname -p)
  ifeq ($(UNAME_P), unknown)
    UNAME_P = $(shell uname -m)
  endif
  ifeq ($(UNAME_P), x86_64)
    CPPFLAGS += -D AMD64
  else ifneq ($(filter %86, $(UNAME_P)), )
    CPPFLAGS += -D IA32
  else ifneq ($(filter arm%, $(UNAME_P)), )
    CPPFLAGS += -D ARM
  endif
endif

# some colors for pretty printing
WHITE =		\033[37;01m
RED =		\033[31;01m
GREEN =		\033[32;01m
YELLOW =	\033[33;01m
BLUE =		\033[34;01m
BASIC =		\033[0m

# default to silent Makefile, but you can run ´VERBOSE=t make´
ifdef VERBOSE
CPPFLAGS += -D VERBOSE
else
.SILENT:
endif



##
## PUBLIC RULES
##

# just to avoid conflicts between rules and files/folders names
.PHONY: all debug sanitize me_cry re clean fclean mrproper test allegro

# classic build
all: $(O_DIR)
	$(MAKE) allegro
	$(MAKE) $(NAME) $(FLAGS)

# build for gdb/valgrind debugging
debug: FLAGS = "CXXFLAGS = -g -ggdb"
debug: all

# build for clang runtime debugging (fsanitize)
sanitize: FLAGS = "CXXFLAGS = -g -ggdb -fsanitize=address,undefined -ferror-limit=5"
sanitize: all

# masochist build
me_cry: FLAGS = "CXXFLAGS = -Wall -Werror -Wextra -Wpedantic -Wold-style-cast -Woverloaded-virtual -Wfloat-equal -Wwrite-strings -Wcast-align -Wconversion -Wshadow -Weffc++ -Wredundant-decls -Winit-self -Wswitch-default -Wswitch-enum -Wundef -Winline -Wunreachable-code" #-Wcast-qual
me_cry: all

# clean build and recompile with previous flags
re: FLAGS = $(PREV_FLAGS)
re: fclean all

# run tests on project
test: all

# install allegro
allegro: $(ALLEGRO)

# remove all generated .o and .d
clean:
	$(RM) $(OBJS)
	$(RM) $(DEPS)
	$(RM) $(ALLEGRO_ARCHIVE)

# remove the generated binary, and all .o and .d
fclean: clean
	$(RM) $(NAME)
#	test -e $(ALLEGRO_DIR) && $(MAKE) -C $(ALLEGRO_DIR) clean || true

# just clean everything this Makefile could have generated
mrproper: fclean
	test -d $(O_DIR) && $(RMDIR) $(O_DIR) || true
	$(RM) -r $(ALLEGRO_DIR)



##
## PRIVATE RULES
##

# read dependencies list generated by -MMD flag
-include $(DEPS)

# create binary (link)
$(NAME): $(OBJS)
	@$(ECHO) "$(BLUE)$(OBJS) $(LDLIBS) $(WHITE)->$(RED) $@ $(BASIC)"
	$(CXX) $(CXXFLAGS) $(I_DIR) $(OBJS) $(LDLIBS) -o $@ $(LDFLAGS)
	@$(ECHO) "$(WHITE)ldflags:$(BASIC) $(LDFLAGS)"
	@$(ECHO) "$(WHITE)cxxflags:$(BASIC) $(CXXFLAGS)"
	@$(ECHO) "$(WHITE)cppflags:$(BASIC) $(CPPFLAGS)"
	@$(ECHO) "$(WHITE)compi:$(BASIC) $(CXX)"

# create object files (compile)
$(O_DIR)/%.o: %.cpp
	@$(ECHO) "$(WHITE)$<\t->$(BLUE) $@ $(BASIC)"
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(I_DIR) -MMD -c $< -o $@

# create directory for compilation sub-products
$(O_DIR):
	$(MKDIR) $(O_DIR)

# install allegro
$(ALLEGRO):
	test -d $(ALLEGRO_DIR) || (test -f $(ALLEGRO_ARCHIVE) || $(CURL) $(ALLEGRO_URL) && $(UNTAR) $(ALLEGRO_ARCHIVE))
	$(MKDIR) $(ALLEGRO_INSTALL_DIR)
	cd $(ALLEGRO_DIR) && cmake -D CMAKE_INSTALL_PREFIX=$(ALLEGRO_INSTALL_DIR) -D WANT_DOCS=off -D WANT_DOCS_HTML=off -D WANT_DOCS_MAN=off -D WANT_FONT=off -D WANT_AUDIO=off -D WANT_IMAGE=off -D WANT_IMAGE_PNG=off -D WANT_TTF=off -D WANT_PHYSFS=off -D WANT_PRIMITIVES=off -D WANT_NATIVE_DIALOG=off -D WANT_VIDEO=off -D WANT_RELEASE_LOGGING=off -D WANT_DEMO=off -D WANT_EXAMPLES=off -D WANT_POPUP_EXAMPLES=off -D WANT_TESTS=off .
	$(MAKE) -C $(ALLEGRO_DIR)
	$(MAKE) -C $(ALLEGRO_DIR) install
